
<body>

<h1>Seat<br>
&nbsp&nbsp<small><i>yourself</i></small></h1>

<h2><%= link_to "Home", restaurants_url %><br>

<% if current_user != nil %>
  <%= link_to "Your Reservations", user_path(current_user) %><br>
  <%= link_to "Logout", session_path("this session"), :method => :delete %>
<% end %>
</h2>

<h3> Choose Your<br>
Dining Experience:
</h3>

<%= form_tag(restaurants_path, :method => "get", id:"search_form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Restaurants" %>
    <%= submit_tag "Search by Attribute", :name => nil %>
  <% end %>

<% @restaurants.each do |restaurant| %>
    <ul>
      <li>
        <%= link_to restaurant.name, restaurant_url(restaurant.id) %>
      </li>
    </ul>

<% end %>
</body>



